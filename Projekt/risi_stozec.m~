r = linspace(0, 2 * pi) ;
th = linspace(0, 2 * pi) ;
[R,T] = meshgrid(r, th) ;
X = R.*cos(T);
Y = R.*sin(T);
Z = R;
S = surf(X, Y, Z, 'FaceAlpha', 0.3);
S.EdgeColor = 'none';
hold on;
s = surf(X, Y, ones(100, 100), 'FaceAlpha', 0.3);
s.EdgeColor = 'none';
hold on;

% Kroznica: 
x_1 = 2.*cos(T);
y_1 = 2.*sin(T);

x_1 = 2.*cos(T);
y_1 = 2.*sin(T);
z_1 = ones(100, 100);
surf(x_1, y_1, z_1);